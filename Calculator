#include <iostream>
#include <string>

using namespace std;

int main() {
    int n;

    string input;
    char sign;

    cout << "Enter two numbers separated by a mathematical action sign without spaces: ";
    cin >> input;

    int i = 0;
    float num1, num2;
    while (input[i] != '-' && input[i] != '+' && input[i] != '*' && input[i] != '/') {
        i++;
    }

    num1 = stoi(input.substr(0, i));
    num2 = stoi(input.substr(i + 1));
    sign = input[i];
    float res;
    switch (sign) {
    case '+':
        res = num1 + num2;
        break;
    case '-':
        res = num1 - num2;
        break;
    case '*':
        res = num1 * num2;
        break;
    case '/':
        res = num1 / num2;
        break;
    default: cout << "ERROR";
        break;
    }
    cout << res;
    return 0;
}
